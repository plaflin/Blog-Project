{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <h1>{{entry.title}}</h1>
                    <time datetime={{entry.date}}>{{entry.date}}</time>
                    <div class="entry">
                        {{{entry.body}}}
                        <a class="link" href="/{{entry.slug}}/edit">Edit Entry</a>
                        <a class="delete" href="/{{entry.slug}}/delete">Delete Entry</a>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each entry.comments}}
                <div class="comment">
                    {{#if author}}
                        <strong>{{author}}</strong>
                    {{else}}
                        <strong>Anonymous</strong>
                    {{/if}}

                    <time datetime={{date}}>{{date}}</time>
                    <p>{{body}}</p>
                </div>
            {{/each}}
            <div class="new-comment">
                <form action="/{{entry.slug}}" method="post">
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{{/partial}}
{{> base.hbs}}